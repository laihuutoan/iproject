<% unless comment.parent_id || !comment.persisted? %>
  <div class="card">
    <div class="card-body">
      <div class="d-flex">
        <div class="mr-2">
          <%= image_tag comment.author.image, alt: "Avatar", title: comment.author.full_name, class: "avatar avatar--md avatar-list" %>
        </div>
        <div class="w-100">
          <p class="commentor mb-0">
            <%= comment.author.full_name %> <span class="post-info">on <%= comment.created_at.strftime("%b #{comment.created_at.day.ordinalize}, %Y") %></span>
          </p>
          <%= comment.body %>
          <%= link_to new_post_comment_path(@post, parent_id: comment.id), remote: true, class: 'd-block', style: 'text-decoration: auto;' do %>
              <i class="fa fa-comments"></i> Reply
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="reply-form-<%= comment.id %>" class="reply-form"></div>
  <% if comment.replies.any? %>
    <% comment.replies.each do |reply| %>
      <%= render partial: 'comments/reply', locals: { reply: reply } %>
    <% end %>
  <% end %>
<% end %>
