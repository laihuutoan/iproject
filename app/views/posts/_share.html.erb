<div class="spyr_sliding_share">
  <div class="spyr_sliding_share_text">SHARE</div>
  <div class="spyr_sliding_share_wrap">
    <div class="spyr_sliding_share_button spyr_sb_facebook">
      <a href="#" class="icon icon-facebook" aria-label="Facebook"><span>Facebook</span></a>
      <div class="spyr_sb_inner">
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= post_url(@post) %>" class="sliding-share-button ssb-facebook" target="_blank" rel="noopener"><i class="fa fa-lg fa-facebook-square"></i> Share</a>
      </div>
    </div>
  </div>
  <div class="spyr_sliding_share_wrap">
    <div class="spyr_sliding_share_button spyr_sb_twitter">
      <a href="#" class="icon icon-twitter" aria-label="Twitter"><span>Twitter</span></a>
      <div class="spyr_sb_inner">
        <a
          href="https://twitter.com/intent/tweet?source=<%= post_url(@post) %>"
          class="sliding-share-button ssb-twitter"
          target="_blank"
          rel="noopener"
        >
          <i class="fa fa-lg fa-twitter"></i> Tweet
        </a>
      </div>
    </div>
  </div>
  <div class="spyr_sliding_share_wrap">
    <div class="spyr_sliding_share_button spyr_sb_mail">
      <a href="#" class="icon icon-mail" aria-label="Email a Friend"><span>Email a Friend</span></a>
      <div class="spyr_sb_inner">
        <a href="mailto:?subject=<%= @post.title %>: <%= post_url(@post) %>">Email a Friend</a>
      </div>
    </div>
  </div>
  <div class="clear"></div>
</div>
